<Window x:Class="HR_Application_DB_WPF.Windows.GeneralWindows.EmployeeProfileWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:HR_Application_DB_WPF"
        mc:Ignorable="d"
        ResizeMode="NoResize"
        Title="EmployeeProfileWindow" Height="600" Width="800" Background="#FFE9E9E9">
    <Window.Resources>
        <ResourceDictionary Source="/ResourceDictionaries/HRAppResourcesDictionary.xaml"/>
    </Window.Resources>
    <Grid>
        <TabControl>
            <TabItem x:Name="EmployeeProfileTabItem" Header="Employee profile" Foreground="#878383" Margin="365,0,-385,0" FontSize="24" MouseEnter="TabItem_MouseEnter" MouseLeave="TabItem_MouseLeave" FontFamily="Global User Interface">
                <Grid Background="#FFE5E5E5">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="5*"></ColumnDefinition>
                        <ColumnDefinition Width="3*"></ColumnDefinition>
                    </Grid.ColumnDefinitions>
                    <Grid Grid.Column="0">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="2*"></ColumnDefinition>
                            <ColumnDefinition Width="3*"></ColumnDefinition>
                        </Grid.ColumnDefinitions>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="0.8*"></RowDefinition>
                            <RowDefinition Height="0.8*"></RowDefinition>
                            <RowDefinition Height="0.8*"></RowDefinition>
                            <RowDefinition Height="0.8*"></RowDefinition>
                            <RowDefinition Height="0.8*"></RowDefinition>
                            <RowDefinition Height="0.8*"></RowDefinition>
                            <RowDefinition Height="0.8*"></RowDefinition>
                            <RowDefinition Height="0.8*"></RowDefinition>
                            <RowDefinition Height="0.8*"></RowDefinition>
                            <RowDefinition Height="0.8*"></RowDefinition>
                            <RowDefinition Height="1.2*"></RowDefinition>
                            <RowDefinition Height="0.8*"></RowDefinition>
                            <RowDefinition Height="1.2*"></RowDefinition>
                        </Grid.RowDefinitions>
                        <Label Grid.Row="0" Grid.Column="0" Content="First name" />
                        <TextBox Grid.Row="0" Grid.Column="1" x:Name="FirstNameTextBox" Style="{DynamicResource RoundTextBoxStyle}"/>
                        <Label Grid.Row="1" Grid.Column="0" Content="Last name"/>
                        <TextBox  Grid.Row="1" Grid.Column="1" x:Name="LastNameTextBox" Style="{DynamicResource RoundTextBoxStyle}"/>
                        <Label  Grid.Row="2" Grid.Column="0" Content="Date of Birth"/>
                        <DatePicker  Grid.Row="2" Grid.Column="1" x:Name="DateOfBirthDatePicker" Style="{DynamicResource DatePickerStyle}"/>
                        <Label Grid.Row="3" Grid.Column="0" Content="Phone" HorizontalAlignment="Left"/>
                        <TextBox Grid.Row="3" Grid.Column="1" x:Name="PhoneTextBox" Style="{DynamicResource RoundTextBoxStyle}"/>
                        <Label Grid.Row="4" Grid.Column="0" Content="E-mail"/>
                        <TextBox Grid.Row="4" Grid.Column="1" x:Name="EmailTextBox" Style="{DynamicResource RoundTextBoxStyle}"/>
                        <Label Grid.Row="5" Grid.Column="0" Content="Department" />
                        <TextBox Grid.Row="5" Grid.Column="1" x:Name="TextBox_Department" Style="{DynamicResource RoundTextBoxStyle}" PreviewMouseDown="TextBox_Department_PreviewMouseDown"/>
                        <Label Grid.Row="6" Grid.Column="0" Content="Position" />
                        <TextBox Grid.Row="6" Grid.Column="1" x:Name="TextBox_Position" Style="{DynamicResource RoundTextBoxStyle}" PreviewMouseDown="TextBox_Position_PreviewMouseDown"/>
                        <Label Grid.Row="7" Grid.Column="0" Content="Competence"/>
                        <TextBox Grid.Row="7" Grid.Column="1" x:Name="TextBox_Competence" Style="{DynamicResource RoundTextBoxStyle}" PreviewMouseDown="TextBox_Competence_PreviewMouseDown"/>
                        <Label Grid.Row="8" Grid.Column="0" Content="Project name"/>
                        <TextBox Grid.Row="8" Grid.Column="1" x:Name="ProjectNameTextBox" Style="{DynamicResource RoundTextBoxStyle}"/>
                        <Label Grid.Row="9" Grid.Column="0" Content="Registration date"/>
                        <TextBox Grid.Row="9" Grid.Column="1" x:Name="RegistrationDateTextBox" Style="{DynamicResource RoundTextBoxStyle}"/>
                        <Button Grid.Row="10" Grid.ColumnSpan="2" x:Name="Button_AddComment" Margin="5,5,150,5" Style="{DynamicResource CoralRoundButtonStyle}" Content="ADD COMMENT" Click="Button_AddComment_Click"/>
                        <TextBox Grid.Row="11" Grid.ColumnSpan="2" x:Name="CommentsTextBox" Style="{DynamicResource RoundTextBoxStyle}"/>
                        <Button Grid.Row="12" Grid.Column="0" x:Name="Button_Cancel" Content="CANCEL" Style="{DynamicResource CoralRoundButtonStyle}" Margin="5,5,5,5" Click="Button_Cancel_Click"/>
                        <Button Grid.Row="12" Grid.Column="1" x:Name="Button_Save" Content="SAVE" Style="{DynamicResource CoralRoundButtonStyle}" Margin="100,5,0,5" Click="Button_Save_Click"/>
                    </Grid>
                    <Grid Grid.Column="1">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="1*"></RowDefinition>
                            <RowDefinition Height="0.4*"></RowDefinition>
                            <RowDefinition Height="2*"></RowDefinition>
                        </Grid.RowDefinitions>
                        <Rectangle Grid.Row="0" Grid.Column="1" HorizontalAlignment="Left" Height="110" Margin="100,25,0,0" Stroke="White" VerticalAlignment="Top" Width="95" Fill="White"/>
                        <Button Grid.Row="1" Style="{DynamicResource CoralRoundButtonStyle}" Content="EDIT PHOTO" ></Button>
                    </Grid>
                </Grid>
            </TabItem>
            <TabItem x:Name="EmployeeHistoryTabItem" Header="Employee history" Foreground="#878383" Margin="385,0,-396,0" FontSize="24" MouseEnter="TabItem_MouseEnter" MouseLeave="TabItem_MouseLeave" FontFamily="Global User Interface">
                <Grid Background="#FFE5E5E5">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="99*"/>
                        <ColumnDefinition Width="49*"/>
                    </Grid.ColumnDefinitions>
                    <TextBox x:Name="HistoryTextBox" Style="{DynamicResource RoundTextBoxStyle}" HorizontalAlignment="Left" Margin="21,22,0,0" Padding="20,10,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="719" Height="168" FontSize="16" Grid.ColumnSpan="2"/>
                </Grid>
            </TabItem>
        </TabControl>
    </Grid>
</Window>