            <TabItem Style="{DynamicResource TabItemStyle}" x:Name="TabItemAddCompanies" Header="Add Companies">
                <Grid x:Name="MainAddCompanies" Background="#FFE9E9E9">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="2*"/>
                        <RowDefinition Height="1*"/>
                    </Grid.RowDefinitions>

                    <Grid Grid.Column="0" Grid.Row="0">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="0.75*"/>
                            <ColumnDefinition Width="0.5*"/>
                            <ColumnDefinition Width="0.5*"/>
                        </Grid.ColumnDefinitions>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="0.1*"/>
                            <RowDefinition Height="1*"/>
                        </Grid.RowDefinitions>

                        <DataGrid Grid.Row="1" Grid.Column="0" x:Name="CompanyGrid" Margin="10,141,134,-66" VerticalScrollBarVisibility="Auto">
                            <DataGrid.Columns>
                                <DataGridTextColumn x:Name="DataGridTextColumn_CompanyIDCompany" Header="CompanyID" Visibility="Hidden" Binding="{Binding Path=FullName}" Width="1*"/>
                                <DataGridTextColumn x:Name="DataGridTextColumn_TitleCompany" Header="Title" Binding="{Binding Path=FullName}" Width="1*"/>
                                <DataGridTextColumn x:Name="DataGridTextColumn_DescriptionCompany" Header="Description" Binding="{Binding Path=FullName}" Width="1*"/>
                            </DataGrid.Columns>
                        </DataGrid>


                        <DataGrid Grid.Row="1" x:Name="DepartmentGrid" Margin="434,141,71,-65" VerticalScrollBarVisibility="Auto" Grid.ColumnSpan="2">
                            <DataGrid.Columns>
                                <DataGridTextColumn x:Name="DataGridTextColumn_DepartmentIDDepartment" Header="DepartmentID" Visibility="Hidden" Binding="{Binding Path=FullName}" Width="1*"/>
                                <DataGridTextColumn x:Name="DataGridTextColumn_TitleDepartment" Header="Title" Binding="{Binding Path=FullName}" Width="0.6*"/>
                                <DataGridTextColumn x:Name="DataGridTextColumn_DescriptionDepartment" Header="Description" Binding="{Binding Path=FullName}" Width="1*"/>
                            </DataGrid.Columns>
                        </DataGrid>

                        <DataGrid Grid.Row="1" Grid.Column="1" x:Name="ProjectGrid" Margin="316,141,11,-66" VerticalScrollBarVisibility="Auto" Grid.ColumnSpan="2">
                            <DataGrid.Columns>
                                <DataGridTextColumn x:Name="DataGridTextColumn_ProjectIDProject" Header="ProjectID" Visibility="Hidden" Binding="{Binding Path=FullName}" Width="1*"/>
                                <DataGridTextColumn x:Name="DataGridTextColumn_TitleProject" Header="Title" Binding="{Binding Path=FullName}" Width="0.6*"/>
                                <DataGridTextColumn x:Name="DataGridTextColumn_DescriptionProject" Header="Description" Binding="{Binding Path=FullName}" Width="1*"/>
                            </DataGrid.Columns>
                        </DataGrid>
                    </Grid>

                    <Grid Grid.Column="0" Grid.Row="1">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="0.1*"/>
                            <RowDefinition Height="0.2*"/>
                            <RowDefinition Height="0.2*"/>
                        </Grid.RowDefinitions>
                        <Grid Grid.Row="0" x:Name="rbGrid">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition/>
                                <ColumnDefinition/>
                                <ColumnDefinition/>
                                <ColumnDefinition/>
                                <ColumnDefinition/>
                            </Grid.ColumnDefinitions>
                            <RadioButton Content="Companies" IsChecked="True" TextElement.Foreground="#E3405F" HorizontalAlignment="Left" Margin="15,-395,0,0" VerticalAlignment="Top" Checked="RadioButton_Checked"/>
                            <RadioButton Content="Departments" Grid.Column="1" TextElement.Foreground="#E3405F" HorizontalAlignment="Left" Margin="173,-395,0,0" VerticalAlignment="Top" Grid.ColumnSpan="2"/>
                            <RadioButton Content="Projects" Grid.Column="3" TextElement.Foreground="#E3405F" HorizontalAlignment="Left" Margin="103,-395,0,0" VerticalAlignment="Top"/>
                        </Grid>

                        <Grid Grid.Row="1" x:Name="tbGrid">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="1*"/>
                                <ColumnDefinition Width="3*"/>
                            </Grid.ColumnDefinitions>
                            <TextBox Style="{DynamicResource RoundTextBoxStyle}" x:Name="txtTitleProject" Margin="15,-373,952,0" Grid.Column="0" Tag="Title" Grid.ColumnSpan="2" VerticalAlignment="Top"/>
                            <TextBox Style="{DynamicResource RoundTextBoxStyle}" x:Name="txtDescriptionProject" Margin="42,-373,15,0" Grid.Column="1" Tag="Description" VerticalAlignment="Top"/>
                        </Grid>

                        <Grid Grid.Row="2" x:Name="butGrid">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition/>
                                <ColumnDefinition/>
                                <ColumnDefinition/>
                                <ColumnDefinition/>
                                <ColumnDefinition/>
                                <ColumnDefinition/>
                            </Grid.ColumnDefinitions>
                            <Button Style="{DynamicResource CoralRoundButtonStyle}" Grid.Column="1" Margin ="10" Height="60" x:Name="Button_Add" Content="Add" Click="Button_Add_Click"/>
                            <Button Style="{DynamicResource CoralRoundButtonStyle}" Grid.Column="2" Margin ="10" Height="60" x:Name="Button_Delete" Content="Delete" Click="Button_Delete_Click"/>
                            <Button Style="{DynamicResource CoralRoundButtonStyle}" Grid.Column="3" Margin ="10" Height="60" x:Name="Button_Update" Content="Update" Click="Button_Update_Click"/>
                            <Button Style="{DynamicResource CoralRoundButtonStyle}" Grid.Column="3" Margin ="10" Height="60" x:Name="Button_SaveUpdate" Content="Save" Click="Button_SaveUpdate_Click" Visibility="Hidden"/>
                            <Button Style="{DynamicResource CoralRoundButtonStyle}" Grid.Column="4" Margin ="10" Height="60" x:Name="Button_CancelUpd" Content="Cancel" Click="Button_Cancel_Click"/>
                        </Grid>
                    </Grid>
                </Grid>
            </TabItem>
        </TabControl>
    </DockPanel>
</Window>