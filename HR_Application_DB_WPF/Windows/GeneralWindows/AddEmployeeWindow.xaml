<Window x:Class="HR_Application_DB_WPF.Windows.GeneralWindows.AddEmployeeWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="AddEmployeeWindow" Height="800" Width="600">
    <Window.Resources>
        <ResourceDictionary Source="/ResourceDictionaries/HRAppResourcesDictionary.xaml"/>
    </Window.Resources>
    <Grid Background="#E9E9E9">
        <Grid.RowDefinitions>
            <RowDefinition Height="31*"></RowDefinition>
            <RowDefinition Height="283*"></RowDefinition>
            <RowDefinition Height="78*"></RowDefinition>
        </Grid.RowDefinitions>

        <TextBox Style="{DynamicResource RoundTextBoxStyle}" Margin="25,32,0,0" VerticalAlignment="Top" Grid.Row="1" Height="22" Width="328" HorizontalAlignment="Left" Text="First name" FontSize="12"/>
        <DatePicker Style="{DynamicResource DatePickerBirth}" HorizontalAlignment="Left" Margin="25,126,0,0" Grid.Row="1" VerticalAlignment="Top" Width="326" Height="29" FontFamily="Global User Interface"/>
        <TextBox Style="{DynamicResource RoundTextBoxStyle}" Margin="25,79,0,0" VerticalAlignment="Top" Grid.Row="1" Height="22" Width="328" HorizontalAlignment="Left" FontSize="12" Text="Last name"/>
        <TextBox Style="{DynamicResource RoundTextBoxStyle}" Margin="25,173,0,0" VerticalAlignment="Top" Grid.Row="1" Height="22" Width="328" HorizontalAlignment="Left" FontSize="12" Text="Phone"/>
        <TextBox Style="{DynamicResource RoundTextBoxStyle}" Margin="25,221,0,0" VerticalAlignment="Top" Grid.Row="1" Height="22" Width="328" HorizontalAlignment="Left" FontSize="12" Text="E-mail"/>
        <TextBox Style="{DynamicResource RoundTextBoxStyle}" Margin="25,267,0,0" VerticalAlignment="Top" Grid.Row="1" Height="22" Width="328" HorizontalAlignment="Left" FontSize="12" Text="Registration date"/>
        <TextBox x:Name="TextBox_Department" Style="{DynamicResource RoundTextBoxStyle}" Margin="25,315,0,0" Grid.Row="1" Height="22" Width="328" HorizontalAlignment="Left" FontSize="12" Text="Department" VerticalAlignment="Top" PreviewMouseDown="TextBox_Department_PreviewMouseDown"/>
        <TextBox x:Name="TextBox_Competence" Style="{DynamicResource RoundTextBoxStyle}" Margin="25,409,0,0" VerticalAlignment="Top" Grid.Row="1" Height="22" Width="328" HorizontalAlignment="Left" FontSize="12" Text="Competence" PreviewMouseDown="TextBox_Competence_PreviewMouseDown"/>
        <TextBox Style="{DynamicResource RoundTextBoxStyle}" Margin="25,456,0,0" VerticalAlignment="Top" Grid.Row="1" Height="22" Width="328" HorizontalAlignment="Left" FontSize="12" Text="Project level"/>
        <Button x:Name="Button_Cancel" Content="CANCEL" HorizontalAlignment="Left" Margin="40,57,0,0" Grid.Row="2" VerticalAlignment="Top" Height="50" Width="202" Style="{DynamicResource CoralRoundButtonStyle}" FontSize="24" FontWeight="Bold" Click="Button_Cancel_Click"/>
        <Button Content="Button" HorizontalAlignment="Left" Height="0" Margin="173,171,0,0" Grid.Row="2" VerticalAlignment="Top" Width="40"/>
        <Button x:Name="Button_Save" Content="SAVE" HorizontalAlignment="Left" Margin="344,56,0,0" Grid.Row="2" VerticalAlignment="Top" Height="50" Width="202" Style="{DynamicResource CoralRoundButtonStyle}" FontSize="24" FontWeight="Normal" Click="Button_Save_Click"/>
        <Button x:Name="Button_AddPhoto" Content="ADD PHOTO" HorizontalAlignment="Left" Margin="385,203,0,0" Grid.Row="1" VerticalAlignment="Top" Height="44" Width="170" Style="{DynamicResource CoralRoundButtonStyle}" FontSize="24" FontWeight="Normal" RenderTransformOrigin="0.388,0.364" IsEnabled="False"/>
        <Rectangle HorizontalAlignment="Left" Fill="White" Height="152" Margin="385,32,0,0" Grid.Row="1" Stroke="White" VerticalAlignment="Top" Width="170"/>
        <TextBox x:Name="TextBox_Position" Style="{DynamicResource RoundTextBoxStyle}" Margin="25,361,0,0" Grid.Row="1" Height="23" Width="328" HorizontalAlignment="Left" FontSize="12" Text="Position" VerticalAlignment="Top" PreviewMouseDown="TextBox_Position_PreviewMouseDown"/>
        <Label x:Name="AuthorisationTitle" Grid.Row="0"  Content="ADD EMPLOYEE" Background="#E9E9E9" FontSize="36" FontWeight="Bold" Foreground="#FFE64E6C" Margin="101,1,101,4" Width="Auto" HorizontalContentAlignment="Center"/>
    </Grid>
</Window>