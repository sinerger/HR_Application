<Window x:Class="HR_Application_DB_WPF.Windows.GeneralWindows.ChangePasswordWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="ChangePasswordWindow" Height="600" Width="500" Background="#E9E9E9">
    <Window.Resources>
        <ResourceDictionary Source="/ResourceDictionaries/HRAppResourcesDictionary.xaml"/>
    </Window.Resources>
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition></RowDefinition>
            <RowDefinition></RowDefinition>
            <RowDefinition></RowDefinition>
            <RowDefinition></RowDefinition>
            <RowDefinition></RowDefinition>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition></ColumnDefinition>
            <ColumnDefinition></ColumnDefinition>
        </Grid.ColumnDefinitions>
        <Label x:Name="ChangePasswordTitle" Grid.Column="0" Content="CHANGE PASSWORD" Grid.Row="0" Grid.ColumnSpan="2" Foreground="#E3405F" FontSize="48" HorizontalAlignment="Center" VerticalAlignment="Top" Background="#FFE9E9E9" FontWeight="Bold" FontFamily="Global User Interface"></Label>
        <TextBox Style="{DynamicResource RoundTextBoxStyle}" x:Name="CurrentPasswordInput" Grid.Column="0" Grid.ColumnSpan="2" Text="Current password" TextWrapping="Wrap" Foreground="#676e69" Padding="10,10,0,0" FontSize="24" Margin="20,117,20,50" Grid.RowSpan="2" ScrollViewer.CanContentScroll="True"/>
        <TextBox Style="{DynamicResource RoundTextBoxStyle}" x:Name="NewPasswordInput" Grid.Column="0" Grid.Row="2" Grid.ColumnSpan="2" Text="New Password" TextWrapping="Wrap" Foreground="#676e69" Padding="10,10,0,0" FontSize="24" Margin="20,0,20,53" ScrollViewer.CanContentScroll="True"/>
        <TextBox Style="{DynamicResource RoundTextBoxStyle}" x:Name="ConfirmPasswordInput" Grid.Column="0" Grid.Row="2" Grid.ColumnSpan="2" Text="Confirm password" TextWrapping="Wrap" Foreground="#676e69" Padding="10,10,0,0" FontSize="24" Margin="20,115,20,50" Grid.RowSpan="2"/>
        <Button Style="{DynamicResource CoralRoundButtonStyle}" x:Name="Button_Cancel"  Content="CANCEL"  Width="170" Height="65"  Foreground="#fff" FontSize="36" Grid.Row="4" Margin="25,22,25,22" Click="Button_Cancel_Click" FontFamily="Global User Interface"/>
        <Button Style="{DynamicResource CoralRoundButtonStyle}" x:Name="Button_Save"  Grid.Column="1" Grid.Row="4"  Content="SAVE"  Width="170" Height="65" Foreground="#fff" FontSize="36" Margin="25,22,25,22" Click="Button_Save_Click" FontFamily="Global User Interface"/>
    </Grid>
</Window>
